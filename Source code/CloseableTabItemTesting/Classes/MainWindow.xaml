<Window Title="CloseableTabItemTesting" x:Class="Emi.UserControls.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Margin="4">
		<GroupBox Header="CloseableTabItem" Margin="4, 0, 4, 4" Padding="4">
			<CheckBox Content="IsCloseable" IsChecked="True" Margin="4" Name="closeabilityCheckBox"/>
		</GroupBox>
		<GroupBox Header="TabControl" Margin="4" Padding="4">
			<TabControl Margin="4" Name="tabControl"/>
		</GroupBox>
		<WrapPanel Margin="4, 4, 4, 0">
			<Button Click="AddButton_Click" Content="Add" Margin="4" Padding="4, 2"/>
			<Button Click="ClearButton_Click" Content="Clear" Margin="4" Padding="4, 2"/>
		</WrapPanel>
	</StackPanel>
</Window>